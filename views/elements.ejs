<%- include('partials/header') %>
<div class="jumbotron">
	<h1 class="text-center">
		Welcome!
	</h1>
</div>
	<hr class="mt-2 mb-5">
	
	<div class="row text-center">
		<% elements.forEach(el => { %>		
			<div class="col-lg-3 col-md-4 col-6">
				<a href="/elements/<%= el._id %>">
				<div class="d-block mb-4 h-100"> 
					 <%= el.name %> 
					<img class="img-fluid img-thumbnail" src="<%= el.link %>">
				</div>
				</a>
			</div>
		<% }) %>
		
	</div>
<% if (currentUser) { %>
<div class="jumbotron">
	<h2 class="text-center mt-4 mb-0">
		Add a new element:
	</h2>
</div>
<div class="col-4 m-5">
	<form action="/elements" method="post">
		<div class="form-group">
			<label for="nameInput">Name</label>
			<input type="text" class="form-control" name="element[name]" placeholder="Enter name" value="" id="nameInput">
		</div>
		<div class="form-group">
			<label for="linkInput">Link</label>
			<input type="text" class="form-control" name="element[link]" placeholder="Enter link" value="" id="linkInput">
		</div>
		<div class="form-group">
			<label for="desc">Description</label>
			<input type="text" class="form-control" name="element[description]" placeholder="Enter description" value="" id="detailsInput">
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-outline-success">Add</button>
		</div>
	</form>
</div>
<% } else { %>
<div class="jumbotron">
	<h4 class="text-center mt-4 mb-0">
		You need to be signed in to add new elements
	</h4>
</div>
<% } %>

<%- include('partials/footer') %>